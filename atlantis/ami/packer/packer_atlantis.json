{
  "variables": {
    "name": "atlantis",
    "region": "us-east-1",
    "type": "{{env `TYPE`}}"
  },

  "sensitive-variables": ["type"],

  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
            "root-device-type": "ebs"
          },
          "owners": ["099720109477"],
          "most_recent": true
        },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "atlantis-{{timestamp}}",
      "ami_description": "from {{.SourceAMI}}",
      "tags": {
        "Name": "atlantis-{{timestamp}}",
        "OS_Version": "Ubuntu",
        "Release": "Latest",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Environment": "IAC"
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "use_proxy": false,
      "playbook_file": "./atlantis/main.yml",
      "user": "ubuntu",
      "extra_arguments": [
        "--extra-vars",
        "ansible_python_interpreter=/usr/bin/python3"
      ],
      "ansible_env_vars": [
        "ANSIBLE_HOST_KEY_CHECKING=False"
      ]
    }
  ]
}